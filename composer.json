{
  "name": "waglpz/webapp",
  "description": "Web Application Components",
  "license": "MIT",
  "type": "library",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "apcu-autoloader": true,
    "discard-changes": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "bin": [
    "bin/cli"
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/waglpz/http"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-apcu": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-mysqli": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "aidphp/http": "dev-master",
    "aura/sql": "^5.0",
    "moddengine/dice": "^4.1",
    "nikolaposa/monolog-factory": "^3.1",
    "psr/container": "^2.0",
    "ramsey/uuid": "^4.7",
    "slim/php-view": "^3.2",
    "symfony/dotenv": "^5.4",
    "waglpz/webapp-routing": "dev-php8.2-ready"
  },
  "require-dev": {
    "doctrine/coding-standard": "^9.0",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-deprecation-rules": "^1.1",
    "phpstan/phpstan-doctrine": "^1.1",
    "phpstan/phpstan-phpunit": "^1.1",
    "phpstan/phpstan-strict-rules": "^1.1",
    "phpstan/phpstan-symfony": "^1.1",
    "phpstan/phpstan-webmozart-assert": "^1.1",
    "phpunit/phpunit": "^10.0",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.7",
    "symfony/var-dumper": "^5.4"
  },
  "conflict": {
  },
  "autoload": {
    "psr-4": {
      "Waglpz\\Webapp\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Waglpz\\Webapp\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "waglpz:cli": "bin/cli",
    "waglpz:cs-check": "phpcs -p",
    "waglpz:cs-fix": "phpcbf -p",
    "waglpz:test:normal": "phpunit --colors=always tests",
    "waglpz:analyse": [
      "phpstan analyse --configuration=phpstan.neon bin/ config/ src/ tests/ --level max"
    ],
    "waglpz:check:ci": [
      "@waglpz:check:normal"
    ],
    "waglpz:check:normal": [
      "@waglpz:cs-check",
      "@waglpz:analyse",
      "@waglpz:test:normal"
    ],
    "waglpz:generate-password-hash": "php bin/generate-password.php"
  }
}
